   </module>
   <module>
      <name>lexiconLearner</name>
      <parameters>--from /home/logan/uiuc-lar/boh11demo/conf/actionclass.ini</parameters>
      <node>nebula</node>
	<tag>actionlearner</tag>
	<stdio>nebula</stdio>
   </module>
<connection>
  <from>/icubSim/right_arm/state:o</from>
