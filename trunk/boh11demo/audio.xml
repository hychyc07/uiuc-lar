<application>
<name>Audio processing system</name>
<dependencies>
      <port>/root</port>
</dependencies>
<module>
      <name>yarpdev</name>
      <parameters>--device portaudio --id 1 --channels 1 --read --rate 48000 --samples 4096 --name /microphone</parameters>
	  <node>nebula</node>
	<tag>microphones</tag>
   </module>
   <module>
      <name>vaDetect</name>
      <parameters>--threshold 3</parameters>
	  <node>nebula</node>
	<stdio>nebula</stdio>
	<tag>vad</tag>
   </module>
   <module>
      <name>phoneticClassifier</name>
      <parameters>--from /home/logan/uiuc-lar/boh11demo/conf/phoneclassparams2.ini</parameters>
      <node>nebula</node>
	<tag>phoneclassifier</tag>
	<stdio>nebula</stdio>
   </module>
   <module>
      <name>lexiconLearner</name>
      <parameters>--from /home/logan/uiuc-lar/boh11demo/conf/speechclass.ini</parameters>
      <node>nebula</node>
	<tag>wordlearner</tag>
	<stdio>nebula</stdio>
   </module>
<connection>
  <output>/microphone</output>
  <input>/vad:i</input>
  <protocol>tcp</protocol>
</connection>
<connection>
  <output>/vad:o</output>
  <input>/phone:i</input>
  <protocol>tcp</protocol>
</connection>
<connection>
  <output>/phone:o</output>
  <input>/words:i</input>
  <protocol>tcp</protocol>
</connection>
</application>

