<application>
<name>Audio processing system</name>
<dependencies>
      <port>/root</port>
      <port>/icubSim/right_arm/state:o</port>
</dependencies>
<module>
      <name>yarpdev</name>
      <parameters>--device portaudio --id 1 --channels 1 --read --rate 48000 --samples 4096 --name /microphone</parameters>
	  <node>nebula</node>
	<tag>microphones</tag>
   </module>
   <module>
      <name>vaDetect</name>
      <parameters>--threshold 3</parameters>
	  <node>nebula</node>
	<tag>vad</tag>
   </module>
   <module>
      <name>phoneticClassifier</name>
      <parameters>--from /home/logan/uiuc-lar/boh11demo/phoneclassparams2.ini</parameters>
      <node>nebula</node>
	<tag>phoneclassifier</tag>
   </module>
   <module>
      <name>lexiconLearner</name>
      <parameters>--from /home/logan/uiuc-lar/boh11demo/speechclass.ini</parameters>
      <node>nebula</node>
	<tag>wordlearner</tag>
	<stdio>nebula</stdio>
   </module>
   <module>
      <name>armFwdKin</name>
      <node>nebula</node>
	<tag>fwdkinematics</tag>
   </module>
   <module>
      <name>maDetect</name>
      <parameters>--threshold 0.0001 --decimate 3</parameters>
	  <node>nebula</node>
	<tag>mad</tag>
   </module>
   <module>
      <name>lexiconLearner</name>
      <parameters>--from /home/logan/uiuc-lar/boh11demo/actionclass.ini</parameters>
      <node>nebula</node>
	<tag>actionlearner</tag>
	<stdio>nebula</stdio>
   </module>
   <module>
	<name>associativeMemory</name>
	<parameters> --from /home/logan/uiuc-lar/boh11demo/memparams.ini</parameters>
	<node>nebula</node>
	<tag>chmm</tag>
	<stdio>nebula</stdio>
   </module>
<connection>
  <from>/microphone</from>
  <to>/vadIn</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/vadOut</from>
  <to>/phoneIn</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/phoneOut</from>
  <to>/wordsIn</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/icubSim/right_arm/state:o</from>
  <to>/jointsIn</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/cartesianOut</from>
  <to>/madIn</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/madOut</from>
  <to>/actionsIn</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/wordsOut</from>
  <to>/assocMem/in:a</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/actionsOut</from>
  <to>/assocMem/in:b</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/assocMem/act:a</from>
  <to>/vadOut/status</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/assocMem/act:b</from>
  <to>/madOut/status</to>
  <protocol>tcp</protocol>
</connection>
</application>

